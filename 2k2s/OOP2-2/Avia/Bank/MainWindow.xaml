<Window x:Class="Bank.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Company DB" Height="527" Width="800">
    <Grid Margin="10">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10" Height="35" VerticalAlignment="Bottom">
            <Button Name="btnDepartments" Content="Отделы" Width="100" Margin="0,0,10,0" Click="BtnDepartments_Click" Height="25"/>
            <Button Name="btnEmployees" Content="Сотрудники" Width="100" Margin="0,0,10,0" Click="BtnEmployees_Click" Height="25"/>
            <Button Name="btnAdd" Content="Добавить" Width="100" Margin="0,0,10,0" Click="BtnAdd_Click" Height="25"/>
            <Button Name="btnEdit" Content="Редактировать" Width="100" Margin="0,0,10,0" Click="BtnEdit_Click" Height="25"/>
            <Button Name="btnDelete" Content="Удалить" Width="100" Margin="0,0,10,0" Click="BtnDelete_Click" Height="25"/>
            <Button Name="btnRefresh" Content="Обновить" Width="100" Click="BtnRefresh_Click" Height="25"/>
            <Button x:Name="btnCreateTwoDepartments" Content="Создать 2 отдела" Width="110" Click="BtnCreateTwoDepartments_Click" Height="25" Margin="10,0,0,0"/>
        </StackPanel>
        <DataGrid Name="dataGrid" AutoGenerateColumns="True" IsReadOnly="True" SelectionMode="Single" Margin="0,0,0,58" />
    </Grid>
</Window>
