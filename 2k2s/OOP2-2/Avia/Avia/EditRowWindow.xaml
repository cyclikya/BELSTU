<Window x:Class="Avia.EditRowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование" Height="450" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <StackPanel x:Name="FieldsPanel" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0" VerticalAlignment="Bottom">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="Ok_Click" Height="25"/>
            <Button Content="Отмена" Width="80" Click="Cancel_Click" Height="25"/>
        </StackPanel>
    </Grid>
</Window>
